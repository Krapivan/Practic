@{
    ViewData["Title"] = "Login";
    Layout = null;
}
@{
    var doctors = ViewBag.Doctors;
}
<!DOCTYPE html>
<html>
<head>
    
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .add-button {
            position: fixed;
            bottom: 20px;
            right: 20px;
            font-size: 24px;
            font-weight: bold;
            padding: 12px 20px;
        }

        .back-button {
            position: fixed;
            bottom: 20px;
            left: 20px;
            font-size: 18px;
            padding: 8px 12px;
        }
    </style>
</head>
<body>
    <table>
        <tr>
            <th>ФИО</th>
            <th>Специальность</th>
            <th>Кабинет</th>
            <th>Время работы</th>
        </tr>
       
        @foreach (var doctor in doctors)
        {
            <tr>
                <td>@doctor.FIO</td>
                <td>@doctor.Post</td>
                <td>@doctor.RoomNumber</td>
                <td>@doctor.WorkTime</td>
            </tr>
        }
    </table>
    <button class="add-button" onclick="location.href='add_doctor.html'">+</button>
    <button class="back-button" onclick="history.go(-1)">Вернуться назад</button>
</body>
</html>